<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WeatherApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:view="clr-namespace:WeatherApp.View"
    Shell.NavBarHasShadow="False"
    Shell.NavBarIsVisible="False">

    <FlyoutItem Title="Menu" FlyoutDisplayOptions="AsSingleItem">
        <ShellContent Route="HomePage" ContentTemplate="{DataTemplate view:HomePage}" />
    </FlyoutItem>
    
    <FlyoutItem Title="Favourites" FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent Route="FavouritesPage" ContentTemplate="{DataTemplate view:FavouritesPage}" />
    </FlyoutItem>
    
</Shell>
