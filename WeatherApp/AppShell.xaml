<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WeatherApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:view="clr-namespace:WeatherApp.View">

    <TabBar>
        <Tab Title="Home" Icon="home.png" Route="HomePage">
            <ShellContent ContentTemplate="{DataTemplate view:HomePage}" />
        </Tab>

        <Tab Title="Locations" Icon="favourite.png" Route="FavouritesPage">
            <ShellContent ContentTemplate="{DataTemplate view:FavouritesPage}" />
        </Tab>

        <Tab Title="Settings" Icon="settings.png" Route="SettingsPage">
            <ShellContent ContentTemplate="{DataTemplate view:SettingsPage}" />
        </Tab>

        <Tab Title="About" Icon="about.png" Route="AboutPage">
            <ShellContent ContentTemplate="{DataTemplate view:AboutPage}" />
        </Tab>
    </TabBar>
</Shell>

